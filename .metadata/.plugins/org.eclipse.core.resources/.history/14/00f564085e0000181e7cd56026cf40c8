
public class kuchB {
	public static int sub(int arr[],int n){
		int m=1;
		int l=1;
		for(int i=1;i<n;i++){
			if(arr[i]>arr[i-1])
				l++;
			else{
				if(m<l)
					m=l;
				l=1;
			}
		}
		if(m<l)
			m=l;
		return m;
	}
	public static void main(String[] args)
	{
		int arr[]={11,2,25,45,99,8,44,12,97,222};
		int n=arr.length;
		System.out.println("The Length of Longest Asssending Streak of Array is : "+sub(arr,n));
	}
}
